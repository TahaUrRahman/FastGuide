<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewText">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:layout_width="30sp"
                android:id="@+id/ReviewTextScreenBackBtn"
                android:layout_height="30sp"
                android:background="@drawable/back_arrow_vector">
            </ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#3D64B5"
            android:orientation="vertical"
            android:background="@drawable/top_white_round_edges"
            android:layout_marginTop="10sp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="3">
                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="15sp"
                    android:src="@drawable/blue_teacher">
                </ImageView>
                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:text="Peter Parker"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:orientation="vertical"
            android:background="@drawable/top_white_round_edges">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Review"
                android:textColor="#3D64B5">
            </TextView>
            <TextView
                android:background="@drawable/blue_round_edges"
                android:backgroundTint="#E5EBF7"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_width="match_parent"
                android:text="Great Teacher"
                android:textColor="#51607e"
                android:padding="15sp"
                android:textSize="18sp"
                android:layout_height="180sp">
            </TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100sp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ReturnToHomepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="Return to homepage"
                android:background="@drawable/blue_round_edges"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:paddingLeft="20sp"
                android:paddingRight="20sp">
            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>