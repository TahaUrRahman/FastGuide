<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherCourse"
    android:background="#E5EBF7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageButton
            android:layout_marginTop="20sp"
            android:layout_marginLeft="10sp"
            android:layout_width="30sp"
            android:id="@+id/TeacherCourseScreenBackBtn"
            android:layout_height="30sp"
            android:background="@drawable/back_arrow_vector">
        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bottom_white_round_edges"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/teacher"
            android:layout_height="150sp"
            android:layout_marginTop="10sp">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Teacher Name"
            android:textAlignment="center"
            android:textColor="#51607e"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="10sp">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:text="A short intro paragraph that tells the teacher's education and research areas etc etc"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="10sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/TeacherCourseRV">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>




</LinearLayout>